<%- include('./includes/head.ejs') %>

  <link rel="stylesheet" href="/css/dashbroad.css" />
  <link rel="stylesheet" href="/css/sidebar.css" />
  <link rel="stylesheet" href="/css/table.css" />
  </head>

  <body>
    <%- include('./includes/navigation.ejs') %>
      <main class="main__dashbroad">
        <header class='box__inforBroad'>
          <div class="box__inforBroad--User">
            <div>
              <h4>USER</h4>
              <p>
                <%= users.length %>
              </p>
            </div>
            <i class="fa fa-user" aria-hidden="true"></i>
          </div>
          <div class="box__inforBroad--Order">
            <div>
              <h4>ORDER</h4>
              <p>
                <%= products.length %>
              </p>
            </div>
            <i class="fa fa-cart-plus" aria-hidden="true"></i>
          </div>
          <div class="box__inforBroad--Earnings">
            <div>
              <h4>EARNINGS</h4>
              <p>$<%= products.reduce((pre, aft)=> pre + aft.price, 0) %></p>
            </div>
            <i class="fas fa-coins    "></i>
          </div>
          <div class="box__inforBroad--Blance">
            <div>
              <h4>BALANCE</h4>
              <p>$<%= products.reduce((pre, aft)=> (pre + aft.price)/products.length, 0).toFixed(2) %></p>
            </div>
            <i class="fas fa-wallet   "></i>
          </div>
        </header>
        <article>
            <h2 style="color: rgb(141, 141, 141)">
              <%= Heading %>
            </h2>
            <%- include('./includes/table.ejs') %>
        </article>
      </main>
      <div style="text-align: right; margin-right: 2rem; font-size: large;">
        <span style="margin-right: 1rem;">
          1 - <%= products.length  %>
        </span>
        <span>
          <i class="fa fa-arrow-left" style="color: rgb(160, 160, 160); font-size: medium;" aria-hidden="true"></i>
          <i class="fa fa-arrow-right" style="color: rgb(160, 160, 160); font-size: medium;" aria-hidden="true"></i>
        </span>
      </div>

      <%- include('./includes/foot.ejs') %>